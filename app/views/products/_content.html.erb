<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td>
          <%= form_for @order_item do |f| %>
            <%= f.hidden_field :product_id, :value => product.id %>
            <%= f.hidden_field :quantity, :value => 1, :min => 1 %>
            <%= f.submit "Add to Cart" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
